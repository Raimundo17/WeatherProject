        <div id="contact_form">
            <form method="post" name="contactForm" action="#">
                <div asp-validation-summary="ModelOnly"></div>

                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="required input_field" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
                <div class="cleaner h10"></div>

                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="required input_field" />
                <span asp-validation-for="LastName" class="text-warning"></span>
                <div class="cleaner h10"></div>

                <label asp-for="Email">Email:</label>
                <input type="text" asp-for="Email" class="validate-email required input_field" />
                <span asp-validation-for="Email" class="text-warning"></span>
                <div class="cleaner h10"></div>

                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="required input_field" />
                <span asp-validation-for="Password" class="text-warning"></span>
                <div class="cleaner h10"></div>

                <label asp-for="Confirm">Confirm Password</label>
                <input type="password" asp-for="Confirm" class="required input_field" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
                <div class="cleaner h10"></div>

                <input type="submit" class="submit_btn" name="submit" id="submit" value="Send" />

            </form>
        </div>

