@model WeatherProject.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
}


                <form action="" method="post">

                    <br />

                    <div class="profiel-header">
                        <h3>
                            <b>Recover</b> YOUR PASSWORD <br>
                            <br>
                            <small>All change will send to your e-mail.</small>
